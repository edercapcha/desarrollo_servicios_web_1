@model IEnumerable<DSW1_T5DJ_EL1_EDERCAPCHA.Models.PedidoByRangoAnios>

@{
    ViewBag.Title = "PedidosByYears";
    List<DSW1_T5DJ_EL1_EDERCAPCHA.Models.PedidoByRangoAnios> listItems = ViewBag.pedidos;
}

<div class="row">
    <h2>Pedidos Por Años</h2>
</div>
<br />
<div class="row">
    <div class="col-sm-3">
        <label>Ingrese el Año 1: </label>
        <input id="annoIni" type="number" maxlength="4" max="2021" min="1990" />
    </div>
    <div class="col-sm-3">
        <label>Ingrese el Año 2: </label>
        <input id="annoFin" type="number" maxlength="4" max="2021" min="1990" />
    </div>
    <div class="col-sm-3">
        <button id="btnConsultar" class="btn btn-primary" onclick="fnConsultaPedidoRango()">Consultar</button>
    </div>
</div>
<br />
<div id="divSearch"></div>
<div id="divResult"></div>
<div class="table-responsive">
    <table id="dataTable" class="table table-striped table-bordered table-sm" style="width:100%" data-order='[[ 1, "asc" ]]' data-page-length='10'>
        <thead class="thead-primary">
            <tr>
                <th>@Html.DisplayNameFor(model => model.IdPedido)</th>
                <th>@Html.DisplayNameFor(model => model.Fecha)</th>
                <th>@Html.DisplayNameFor(model => model.Direccion)</th>
                <th>@Html.DisplayNameFor(model => model.Ciudad)</th>
                <th>&nbsp;</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in listItems)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdPedido)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Fecha)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Direccion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ciudad)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                        @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                        @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<script src="~/Scripts/jquery-3.6.0.min.js"></script>
<script src="~/Scripts/Custom/Pedido.js"></script>
<link href="~/Content/jquery.dataTables.min.css" rel="stylesheet" />
<script type="text/javascript" src="~/Scripts/jquery.dataTables.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $('#dataTable').DataTable();
    });
    function fnConsultaPedidoRango() {
        var annoIni = $("#annoIni").val();
        var annoFin = $("#annoFin").val();
        window.location.href = "/Pedido/PedidosByYears?anno_ini=" + annoIni + "&anno_fin=" + annoFin
    };
</script>







