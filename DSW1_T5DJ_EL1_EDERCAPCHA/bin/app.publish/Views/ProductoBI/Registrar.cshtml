@model IEnumerable<DSW1_T5DJ_EL1_EDERCAPCHA.Models.ProductoBI>

@{
    ViewBag.Title = "Registrar";
    List<DSW1_T5DJ_EL1_EDERCAPCHA.Models.ProductoBI> listItems = ViewBag.productosbi;
}
<div class="row">
    <h2>Registro de Productos</h2>
</div>
<br />
<div class="row">
    <div class="col-lg-2">
        <label>Descripción</label>
    </div>
    <div class="col-lg-2">
        <input id="strdescripcion" type="text" maxlength="4" max="40" min="1" />
    </div>
</div>
<br />
<div class="row">
    <div class="col-lg-2">
        <label>Medida</label>
    </div>
    <div class="col-lg-2">
        <input id="strmedida" type="text" maxlength="4" max="100" min="1" />
    </div>
</div>
<br />
<div class="row">
    <div class="col-lg-2">
        <label>Categoría</label>
    </div>
    <div class="col-lg-2">
        <select class="accordion" name="categoria" id="categoria">
            <option value="1">Bebidas</option>
            <option value="2">Condimentos</option>
            <option value="3">Reposteria</option>
            <option value="4">Lacteos</option>
            <option value="5">Granos/Cereales</option>
            <option value="6">Carnes</option>
            <option value="7">Frutas/Verduras</option>
            <option value="8">Pescado/Marisco</option>
            <option value="9">Otros</option>
        </select>
    </div>
</div>
<br />
<div class="row">
    <div class="col-lg-2">
        <label>Proveedor</label>
    </div>
    <div class="col-lg-2">
        <select class="accordion" name="proveedor" id="proveedor">
            <option value="1">	Exotic Liquids                               </option>
            <option value="2">	New Orleans Cajun Delights                   </option>
            <option value="3">	Grandma Kellys Homestead                     </option>
            <option value="4">	Tokyo Traders                                </option>
            <option value="5">	Cooperativa de Quesos Las Cabras             </option>
            <option value="6">	Mayumis                                      </option>
            <option value="7">	Pavlova, Ltd.                                </option>
            <option value="8">	Specialty Biscuits, Ltd.                     </option>
            <option value="9">	PB Knäckebröd AB                             </option>
            <option value="10">	Refrescos Americanas LTDA                    </option>
            <option value="11">	Heli Süßwaren GmbH & Co. KG                  </option>
            <option value="12">	Plutzer Lebensmittelgroßmärkte AG            </option>
            <option value="13">	Nord-Ost-Fisch Handelsgesellschaft mbH       </option>
            <option value="14">	Formaggi Fortini s.r.l.                      </option>
            <option value="15">	Norske Meierier                              </option>
            <option value="16">	Bigfoot Breweries                            </option>
            <option value="17">	Svensk Sjöföda AB                            </option>
            <option value="18">	Aux joyeux ecclesiastiques                   </option>
            <option value="19">	New England Seafood Cannery                  </option>
            <option value="20">	Leka Trading                                 </option>
            <option value="21">	Lyngbysild                                   </option>
            <option value="22">	Zaanse Snoepfabriek                          </option>
            <option value="23">	Karkki Oy                                    </option>
            <option value="24">	Gday, Mate                                   </option>
            <option value="25">	Ma Maison                                    </option>
            <option value="26">	Pasta Buttini s.r.l.                         </option>
            <option value="27">	Escargots Nouveaux                           </option>
            <option value="28">	Gai pâturage                                 </option>
            <option value="29">	Forêts derables                              </option>
        </select>
    </div>
</div>
<br />
<div class="row">
    <div class="col-lg-2">
        <label>Precio</label>
    </div>
    <div class="col-lg-2">
        <input id="decprecio" type="text" maxlength="4" max="100" min="1" />
    </div>
</div>
<br />
<div class="row">
    <div class="col-lg-2">
    </div>
    <div class="col-lg-5">
        <button id="btnLimpiar" class="btn btn-secondary" onclick="fnConsultaPedidoRango()">Limpiar</button>
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        <button id="btnRegistrar" class="btn btn-primary" onclick="fnConsultaPedidoRango()">Agregar</button>
    </div>
</div>
<br />
<br />

<div class="table-responsive">
    <table id="dataTable" class="table table-striped table-bordered table-sm" style="width:100%" data-order='[[ 1, "asc" ]]' data-page-length='10' ">
        <thead class="thead-primary">

            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.IdProducto)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Descripcion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Medida)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Categoria)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Proveedor)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Precio)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in listItems)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdProducto)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descripcion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Medida)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Categoria)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Proveedor)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Precio)
                    </td>
                    <td>
                        <button id="btnDisable" class="btn btn-danger" onclick="fnDisableProduct()">Deshabilitar</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script src="~/Scripts/jquery-3.6.0.min.js"></script>
<script src="~/Scripts/Custom/Pedido.js"></script>
<link href="~/Content/jquery.dataTables.min.css" rel="stylesheet" />
<script type="text/javascript" src="~/Scripts/jquery.dataTables.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $('#dataTable').DataTable();
